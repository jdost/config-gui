#include "xcolors/Current"
#include "xfonts"

#define RFONT HACK
#define BFONT HACKB
#define IFONT HACKIT
#define IBFONT HACKBIT

Xcursor.theme: Neutral_Plus

dzen2.font: UBUMONO

! URxvt {{{
URxvt.font: RFONT, SYMBOLA
URxvt.boldFont: BFONT
URxvt.italicFont: IFONT
URxvt.boldItalicFont: IBFONT
URxvt.letterSpace: -1

URxvt.scrollBar: False
URxvt.scrollTtyOutput: False
URxvt.scrollTtyKeypress: True
URxvt.secondaryScroll: True
URxvt.saveLines: 8000
URxvt.internalBorder: 0
URxvt.cutchars: "()*,<>[]{}|'\""

URxvt.colorUL: #DDDDDD
!URxvt.perl-lib: ~/.config/X11/urxvt
URxvt.perl-ext-common: default,clipboard
! matcher
URxvt.underlineURLs: true
URxvt.urgentOnBell: true
! clipboard
URxvt.keysym.C-x: perl:clipboard:copy
URxvt.keysym.C-v: perl:clipboard:paste
URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

URxvt.depth: 32
URxvt.background: rgba:2222/2222/2222/dddd

URxvt.inheritPixmap: true
URxvt.tintColor: white
!URxvt.transparent: false
!URxvt.shading: 0
! }}}

